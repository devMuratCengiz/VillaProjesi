<div class="col-lg-5">
    <form asp-controller="SendMessage" asp-action="SendMessage" id="contact-form" method="post">
        <div class="row">
            <div class="col-lg-12">
                <fieldset>
                    <label for="name">Ad Soyad</label>
                    <input type="name" name="Name" id="name" placeholder="Ad Soyad..." autocomplete="on" required>
                </fieldset>
            </div>
            <div class="col-lg-12">
                <fieldset>
                    <label for="email">Mail</label>
                    <input type="text" name="Email" id="email" placeholder="Mail..." required="">
                </fieldset>
            </div>
            <div class="col-lg-12">
                <fieldset>
                    <label for="subject">Konu</label>
                    <input type="subject" name="Subject" id="subject" placeholder="Konu..." autocomplete="on">
                </fieldset>
            </div>
            <div class="col-lg-12">
                <fieldset>
                    <label for="message">Mesaj</label>
                    <textarea name="message" id="MessageContent" placeholder="Mesajınız"></textarea>
                </fieldset>
            </div>
            <div class="col-lg-12">
                <fieldset>
                    <button type="submit" id="form-submit" class="orange-button">Gönder</button>
                </fieldset>
            </div>
        </div>
    </form>
</div>