@using Villa.WebUI.ViewComponents.DefaultIndex
@model List<ResultFeatureDto>

<div class="featured section">
    <div class="container">

        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-lg-4">
                    <div class="left-image">
                        <img src="~/VillaAgency-1.0.0/assets/images/featured.jpg" alt="">
                        <a href="property-details.html"><img src="" alt="" style="max-width: 60px; padding: 0px;"></a>
                    </div>
                </div>
            
            <div class="col-lg-5">
                
                    <div class="section-heading">
                        <h6>| @item.Title</h6>
                        <h2>@item.Subtitle</h2>
                    </div>
                

                @await Component.InvokeAsync("_DefaultQA")
            </div>

            
                <div class="col-lg-3">
                    <div class="info-table">
                        <ul>
                            <li>
                                <img src="~/VillaAgency-1.0.0/assets/images/info-icon-01.png" alt="" style="max-width: 52px;">
                                <h4>@item.Square m2<br><span>Total Flat Space</span></h4>
                            </li>
                            <li>
                                <img src="~/VillaAgency-1.0.0/assets/images/info-icon-02.png" alt="" style="max-width: 52px;">
                                <h4>@item.Contract<br><span>Contract Ready</span></h4>
                            </li>
                            <li>
                                <img src="~/VillaAgency-1.0.0/assets/images/info-icon-03.png" alt="" style="max-width: 52px;">
                                <h4>@item.Payment<br><span>Payment Process</span></h4>
                            </li>
                            <li>
                                <img src="~/VillaAgency-1.0.0/assets/images/info-icon-04.png" alt="" style="max-width: 52px;">
                                <h4>@item.Safety<br><span>24/7 Under Control</span></h4>
                            </li>
                        </ul>
                    </div>
                </div>
            }

        </div>
    </div>
